extends layout

block content

    h1 #{title}: #{model.name}

    if model_vehicles.length

        p #[strong Delete the following vehicles before attempting to delete this model.]
        div(style='margin-left:20px;margin-top:20px')
            h4 Vehicles
            dl
                each vehicle in model_vehicles
                    dt
                        a(href=vehicle.detailUrl) #{vehicle}
    else 
        p Do you really want to delete this model?

        form(method='POST')
            div.form-group
                input#modelid.form-control(type='hidden' name='modelid' value=model._id)

            button.btn.btn-primary(type='submit') Delete




