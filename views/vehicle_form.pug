extends layout

block content

    h1=title

    form(method="POST")
        div.form-group
            label(for="make") Make:
            input#model_name.form-control(type="text" placeholder="Make (Honda, Chevrolet, Tesla, etc.)"
            name="make" required value=(undefined===make ? '' : make) )
            label(for="model") Model: 
            input#model.form-control(type="text" placeholder="Model name (Civic, Accord, Model Y)"
            name="model" required value=(undefined===model ? '' : model))
            label(for="summary") Summary: 
            input#summary.form-control(type="text" placeholder="Summary, tell us about the car name"
            name="summary" required value=(undefined===summary ? '' : summary))
            label(for="number_in_stock") Number In Stock:
            input#number_in_stock.form-control(type="number" placeholder="How many are in stock? 1, 2, 3...)"
            name="number_in_stock" required value=(undefined===number_in_stock ? '' : number_in_stock))
            label(for="price") Price: 
            input#price.form-control(type="number" placeholder="What's the price?"
            name="price" required value=(undefined===price ? '' : price))
            label(for="vehicle_type") Vehicle Type: 
            input#vehicle_type.form-control(type="text" placeholder="Car, Truck, or Suv..."
            name="vehicle_type" required value=(undefined===vehicle_type ? '' : vehicle_type))
            button.btn.btn-primary(type='submit') Submit

    if errors 
        ul 
            for error in errors 
                li!= error.msg