extends layout

block content

    h1=title

    form(method="POST")
        div.form-group
            label(for="modelname") Model Name:
            input#model_name.form-control(type="text" placeholder="Model name (Civic)"
            name="modelname" required value=(undefined===model_name ? '' : model_name) )
            label(for="summary") Summary: 
            input#summary.form-control(type="text" placeholder="Details about the car here..."
            name="summary" required value=(undefined===summary ? '' : summary))
            label(for="price") Price: 
            input#price.form-control(type="number" placeholder="What's the price?"
            name="price" required value=(undefined===price ? '' : price))
            button.btn.btn-primary(type='submit') Submit

    if errors 
        ul 
            for error in errors 
                li!= error.msg
