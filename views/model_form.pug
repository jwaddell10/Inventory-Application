extends layout

block content

    h1=title

    form(method="POST")
        div.form-group
            label(for="model") Model: 
            select#model.form-control(name="model" required)
                option(value="") --Please select a Model--
                for model in models 
                    option(value="") #{model.modelname}
        div.form-group
            label(for="summary") Summary: 
            input#summary.form-control(type="text" placeholder="Details about the car here..."
            name="summary" required value=(undefined===summary ? '' : summary))
        div.form-group
            label(for="price") Price: 
            input#price.form-control(type="number" placeholder="What's the price?"
            name="price" required value=(undefined===price ? '' : price))
        button.btn.btn-primary(type='submit') Submit

    if errors 
        ul 
            for error in errors 
                li!= error.msg
