extends layout

block content
    h1=title
    if model_detail.length
        each car in model_detail
            strong #{car.make} #{car.model.modelname}
            br
            strong Summary: 
            |  #{car.model.summary}
            br
            strong Price:
            |  #{car.model.price}

            hr
            p
                a(href=car.model.url+'/delete') Delete model

    else
        p No models found.
