extends layout

block content

    h1 #{title}

    form(method='POST')
        div.form-group
            label(for='name') Vehicle Type:
            input#name.form-control(type='text' placeholder='Car, Truck or SUV' 
            name='name' required value=(undefined===vehicletype ? '' : vehicletype.name) )
        button.btn.btn-primary(type='submit') Submit

    if errors
        ul
            for error in errors
                li!= error.msg
